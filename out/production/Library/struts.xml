<?xml version="1.0" encoding="GBK"?>

<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
        "http://struts.apache.org/dtds/struts-2.3.dtd">

<struts>
    
    <constant name="struts.custom.i18n.resources" value="mess"/>

    <constant name="struts.devMode" value="true"/>

    <package name="library" namespace="/" extends="struts-default">

        <action name="SearchAction" class="com.ccnu.library.action.SearchAction">
            <result name="error">/WEB-INF/content/BookNotFound.jsp</result>
            <result>/WEB-INF/content/SearchResult.jsp</result>
        </action>

        <action name="RegistAction" class="com.ccnu.library.action.RegistAction">
            <result name="error">/WEB-INF/content/RegisterError.jsp</result>
            <result name="success">/WEB-INF/content/RegisterError.jsp</result>
        </action>

        <action name="*Action" class="com.ccnu.library.{1}Action">
            <result name="error">/WEB-INF/content/RegisterError.jsp</result>
            <result>/WEB-INF/content/</result>
        </action>

        <action name="*">
            <result>/WEB-INF/content/{1}.jsp</result>
        </action>
    </package>

</struts>